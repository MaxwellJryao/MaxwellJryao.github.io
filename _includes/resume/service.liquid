<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in data[1] %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% comment %} {% if content.date %} {% assign date = content.date | split: '-' | join: '.' %} {% else %} {% assign date = '' %} {% endif %} {% endcomment %}
          <span class="badge font-weight-bold danger-color-dark text-capitalize align-middle" style="min-width: 75px"> {{ content.role }} </span>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          {% comment %} <h6 class="title font-weight-bold ml-1 ml-md-4"> {% endcomment %}
            {% comment %} <a href="{{ content.url }}">{{ content.title }}</a> {% endcomment %}
          {% comment %} </h6> {% endcomment %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
                {% for org in content.org %}
                    {% if forloop.last %}
                        {{ org }}
                    {% else %}
                        {{ org }},
                    {% endif %}
                {% endfor %}
            </h6>
          {% comment %} <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.org }}</h6> {% endcomment %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
